<!DOCTYPE html>
<html>
<head>
    <title>E-Commerce Home Page</title>
    <style>
        /* CSS styles for the navigation bar */
        .navbar {
            background-color: #333;
            overflow: hidden;
        }
        
        .navbar a {
            float: left;
            color: white;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
        }
        
        .navbar a:hover {
            background-color: #ddd;
            color: black;
        }
        
        /* CSS styles for the product section */
        .product-section {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }
        
        .product-card {
            width: 200px;
            margin: 10px;
            padding: 10px;
            border: 1px solid #ddd;
            text-align: center;
        }
        input[type=text] {
            width: 130px;
            box-sizing: border-box;
            border: 2px solid #ccc;
            border-radius: 30px;
            font-size: 16px;
            background-color: white;
            background-image: url('./public/images/home/search.png');
            background-position: 10px 10px; 
            background-repeat: no-repeat;
            padding: 12px 20px 12px 40px;
            -webkit-transition: width 0.4s ease-in-out;
            transition: width 0.4s ease-in-out;
          }
          
          input[type=text]:focus {
            width: 30%;
            border-radius: 30px;
          }
          input[type=text]:hover {
            width: 30%;
            border-radius: 30px;
          }
    </style>
</head>
<body>
    <!-- <% var userID= 'user/1' %> -->
    <div class="navbar">
        <a href="#" id="homelink">Home</a>
        <a href="#">Products</a>
        <a href="#">About</a>
        <a href="#">Contact</a>

        <div >
            <input type="text" id="searchbox" placeholder="Search">
        </div>


        <div >
            
            <a style="margin-left: auto; float: right;" onclick="link_to_profile()" id="profile-link" href="#">Hello <%= Name %> </a>
            <a style="margin-left: auto; float: right;" href="#">Phone <%= Phone %> </a>
    </div>
    </div>
    
    <div class="product-section">
        <div class="product-card">
            <h3>Product 1</h3>
            <p>Description of Product 1</p>
            <p>$19.99</p>
            <button>Add to Cart</button>
        </div>
        
        <div class="product-card">
            <h3>Product 2</h3>
            <p>Description of Product 2</p>
            <p>$29.99</p>
            <button>Add to Cart</button>
        </div>
        
        <div class="product-card" id="p3">
            <h3>Product 3</h3>
            <p>Description of Product 3</p>
            <p>$39.99</p>
            <button>Add to Cart</button>
        </div>
    </div>
    <label style="display: none;" id="testurl" for="searchbox"> <%= link%> </label>
    <script>
        // Get the profile link
        
        const link_to_profile =()=>
        {
            var profileLink = document.getElementById('profile-link');
            // Get the user ID from the URL
            // Set the href of the profile link to the user ID
            var url = document.getElementById('testurl').innerHTML;
            profileLink.href = url;
            // document.getElementById('homelink').href = url;
        }
        </script>
</body>
</html>

<html>
    <head>
      <!--Import Google Icon Font-->
       <link href='https://fonts.googleapis.com/css?family=Open+Sans:300,400,400i,600,700,800' rel='stylesheet' type='text/css'>
        <link rel="stylesheet" href="//fonts.googleapis.com/css?family=Roboto:300,400,500,700" type="text/css">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
      <!--Import materialize.css-->
       <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.7/css/materialize.min.css">

      <!--Let browser know website is optimized for mobile-->
      <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    </head>

    <body>
      
      <div class="row" style="margin-top:50px;">
    <form class="col s5 push-s3" style="border:2px solid rgba(0,0,0,0.1); padding:0px;">
      <div style="background-color:#02a8f3; padding:10px;">
        <h6 style="color:white;">Change Password <i class="material-icons" style="float:right;">&#xE32A;</i></h3>
        
      </div>
      
      <div class="row" style="padding:20px;">

        <div class="input-field col s12">
          <i class="material-icons prefix" style="color:#02a8f3;">account_circle</i>
          <input id="name" type="text" class="validate">
          <label for="name">Full Name</label>
        </div>

        <div class="input-field col s12  ">
          <i class="material-icons prefix"  style="color:#02a8f3;">
            email
        </i>
          <input id="email" type="text" class="validate">
          <label for="email">Email </label>
        </div>

        
        <div class="input-field col s12">
          <i class="material-icons prefix" style="color:#02a8f3;">
            phone
        </i>
          <input id="phone" type="tel" class="validate">
          <label for="phone">Number</label>
        </div>
        <div class="input-field col s12">
            <i class="material-icons prefix" style="color:#02a8f3;">lock</i>
            <input id="password" type="password" class="validate">
            <label for="password">New Password</label>
          </div>
        <button style="margin-top:20px; background-color:#02a8f3;" class="btn waves-effect waves-light col s3 push-s2" type="button" name="action"
        onclick="changepassword()">
            Change Password
          
        </button>
        <a href="/login" style="margin-top:20px; background-color:#02a8f3;" class="btn waves-effect waves-light col s3 push-s3" type="button" name="action">
            Return Login Page
            </a>
      </div>
    </form>
  </div>
        
      <!--Import jQuery before materialize.js-->
      <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
     <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.7/js/materialize.min.js"></script>
          
     <script>
       async function changepassword(){
        var name = document.getElementById('name').value;
        var email = document.getElementById('email').value;
        var number = document.getElementById('phone').value;
        var password = document.getElementById('password').value;
        console.log(name);
        console.log(email);
        console.log(number);
        console.log(password );
        var data = {
          name: name,
          email: email,
          number: number,
          password: password
        };
        var type = '<%= type %>';
        var response = await fetch('/forgetPassword/'+type , {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify(data)
        })
        .then(response => response.json())
        .then(data => {
          console.log(data);
          if(data.success==true){
            alert('Password Changed');
            window.location.href = '/login';
          }
          else{
            alert('Failed to change password Enter Name and Email/Phone correctly');
          }
        });


         
       };
        </script>
    </body>
  </html>
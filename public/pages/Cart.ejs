<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #35363C;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }
        .cart {
            width: 40%;
            background-color: #90b062;
            border-radius: 15px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            padding: 20px;
        }
        .cart-item {
            display: flex;
            align-items: center;
            border: 1px solid #ddd;
            margin: 10px 0;
            padding: 10px;
            border-radius: 5px;
            background-color: #bcd0a0;
        }
        .cart-item button {
            margin-right: 10px;
        }
        button {
            background-color: 	#464d35;
            color: white;
            border: none;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
            border-radius: 5px;
        }
        button:hover {
            background-color: 	#5c6b38;
        }
        .summary {
            background-color: 	#6b784d;
            color: white;
            padding-bottom: 10px;
            padding-top: 10px;
            /* padding: 20px; */
            margin-top: 20px;
            border-radius: 5px;
            text-align: center;
            width: 100%;
            /* margin: 0 auto; */
            

            
        }
    </style>
</head>
<body>
    <div class="cart">
        <h1>Your Cart</h1>
        <div id="cart"></div>
        <button onclick="addItem()">Add Item</button>
        <div class="summary">
            <h2>Payment Summary</h2>
            <hr
            <p>Subtotal: $<span id="subtotal"></span></p>
            <p>Shipping: $<span id="shipping">5.00</span></p>
            <p>Total: $<span id="total"></span></p>
        </div>
        <button onclick="checkout()">Checkout</button>
    </div>

    <script>
        // Sample cart items
        var cartItems = [
            { name: 'Item 1', price: 10, quantity: 1 },
            { name: 'Item 2', price: 20, quantity: 2 },
            { name: 'Item 3', price: 30, quantity: 1 },
        ];

        // Function to display cart items
        function displayCartItems() {
            var cartDiv = document.getElementById('cart');
            cartDiv.innerHTML = '';  // Clear the cart

            // Loop through each item in the cart
            for (var i = 0; i < cartItems.length; i++) {
                var item = cartItems[i];

                // Create a div for the cart item
                var itemDiv = document.createElement('div');
                itemDiv.className = 'cart-item';

                // Add a remove button
                var removeButton = document.createElement('button');
                removeButton.innerHTML = 'Remove';
                removeButton.addEventListener('click', function(index) {
                    return function() {
                        removeItem(index);
                    };
                }(i));
                itemDiv.appendChild(removeButton);

                // Add increase and decrease buttons
                var decreaseButton = document.createElement('button');
                decreaseButton.innerHTML = '-';
                decreaseButton.addEventListener('click', function(index) {
                    return function() {
                        decreaseQuantity(index);
                    };
                }(i));
                itemDiv.appendChild(decreaseButton);

                var increaseButton = document.createElement('button');
                increaseButton.innerHTML = '+';
                increaseButton.addEventListener('click', function(index) {
                    return function() {
                        increaseQuantity(index);
                    };
                }(i));
                itemDiv.appendChild(increaseButton);

                // Add the item details
                var itemDetails = document.createElement('span');
                itemDetails.innerHTML = ' Name: ' + item.name + ' Price: ' + item.price + ' Quantity: ' + item.quantity;
                itemDiv.appendChild(itemDetails);

                // Add the item div to the cart
                cartDiv.appendChild(itemDiv);
            }

            // Update the subtotal
            var subtotal = 0;
            for (var i = 0; i < cartItems.length; i++) {
                subtotal += cartItems[i].price * cartItems[i].quantity;
            }
            document.getElementById('subtotal').innerHTML = subtotal.toFixed(2);

            // Update the total
            var shipping = parseFloat(document.getElementById('shipping').innerHTML);
            var total = subtotal + shipping;
            document.getElementById('total').innerHTML = total.toFixed(2);
        }

        // Function to add an item to the cart
        function addItem() {
            var name = prompt('Enter the item name');
            var price = parseFloat(prompt('Enter the item price'));
            var quantity = parseInt(prompt('Enter the quantity'));
            cartItems.push({ name: name, price: price, quantity: quantity });
            displayCartItems();
        }

        // Function to remove an item from the cart
        function removeItem(index) {
            cartItems.splice(index, 1);
            displayCartItems();
        }

        // Function to increase the quantity of an item
        function increaseQuantity(index) {
            cartItems[index].quantity++;
            displayCartItems();
        }

        // Function to decrease the quantity of an item
        function decreaseQuantity(index) {
            if (cartItems[index].quantity > 1) {
                cartItems[index].quantity--;
            }
            displayCartItems();
        }

        // Function to handle checkout
        function checkout() {
            alert('Thank you for your purchase!');
            cartItems = [];
            displayCartItems();
        }

        // Display the cart items when the page loads
        displayCartItems();
    </script>
</body>
</html>
